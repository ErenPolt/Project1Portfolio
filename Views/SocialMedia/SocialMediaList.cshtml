@model List<Project1Portfolio.Models.SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Sosyal Medya Sayfası</h2>
<br />
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Icon</th>
            <th>Durum</th>
            <th>Aktif/Pasif</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.SocialMediaId</td>
                    <td>@item.Title</td>
                    <td>@item.Icon</td>
                    <td>@item.Status</td>

                    @*Aktif/Pasif Ekleme*@
                    @if (item.Status == false)
                       {
                            <td><a href="/SocialMedia/StatusChangeToTrue/@item.SocialMediaId" class="btn btn-success">Aktif Yap</a></td>
                        }
                    else
                      {
                            <td><a href="/SocialMedia/StatusChangeToFalse/@item.SocialMediaId" class="btn btn-danger">Pasif Yap</a></td>
                      }

                    <td> <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
    </table>
    <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Ekle</a>
</div>
