@model Project1Portfolio.Models.Work
@{
    ViewBag.Title = "UpdateWork";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Çalışma Güncelle</h2>
<br />
<form method="post">

    @Html.HiddenFor(x => x.Worid, new { @class = "form-control" })
    <label>Başlık:</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama:</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Fotoğraf:</label>
    @Html.TextAreaFor(x => x.İmageUrl, 4, 0, new { @class = "form-control"})
    <br />
    <label>Github:</label>
    @Html.TextAreaFor(x => x.GithubUrl, 4, 0, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>