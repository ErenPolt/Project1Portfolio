@model List<Project1Portfolio.Models.Profile>

@{
    ViewBag.Title = "ProfileList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Profil Sayfası</h2>
<br />
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Adres</th>
            <th>E-mail</th>
            <th>Telefon</th>
            <th>GitHub</th>
            <th>Resimler</th>
            <th>Lokasyon</th>
            <th>Sil</th>
            <th>Güncelle</th>
          </tr>

        @foreach(var item in Model)
            {
              <tr>
                 <td>@item.profileid</td>
                 <td>@item.Title</td>
                 <td>@item.Description</td>
                 <td>@item.Adres</td>
                 <td>@item.Email</td>
                 <td>@item.PhoneNumber</td>
                 <td>@item.Github</td>
                 <td>@item.İmageUrl</td>
                 <td>@item.MapLocation</td>
                 
                  <td><a href="/Profile/DeleteProfile/@item.profileid" class="btn btn-danger">Sil</a></td>
                 <td><a href="/Profile/UpdateProfile/@item.profileid" class="btn btn-success">Güncelle</a></td>
              </tr>
            }
    </table>
       <a href="/Profile/CreateProfile/" class="btn btn-info">Profil Ekle</a>
</div>

