@model Project1Portfolio.Models.Profile

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Profil Güncelleme Sayfası</h2>
<br />
<form method="post">
    @Html.HiddenFor(x=>x.profileid, new {@class="form-control"})

    <label>Başlık:</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama:</label>
    @Html.TextAreaFor(x => x.Description, 4, 0, new { @class = "form-control" })
    <br />
    <label>Adres:</label>
    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
    <br />
    <label>E-mail:</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Telefon:</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    <label>GitHub:</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control" })
    <br />
    <label>Resimler:</label>
    @Html.TextAreaFor(x => x.İmageUrl, 4, 0, new { @class = "form-control" })
    <br />
    <label>Lokasyon:</label>
    @Html.TextAreaFor(x => x.MapLocation, 4, 0, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>

